<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/purple_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >


<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="12dp"
        android:id="@+id/btnProfile"
        app:cardCornerRadius="40dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonLocation"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        >
      <ImageView
          android:layout_height="match_parent"
          android:layout_width="match_parent"
          android:id="@+id/ivProfile"
          android:src="@drawable/user_profile"
          android:scaleType="centerCrop"
          />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_search"
        android:id="@+id/imageButtonSearch"
        android:background="@drawable/shape_circle"
        app:layout_constraintStart_toEndOf="@+id/imageButtonLocation"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        />
    <Button
        android:text="POST"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/btnAddPost"
        android:drawableLeft="@drawable/ic_add"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_rectangle"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_location"
        android:id="@+id/imageButtonLocation"
        android:background="@drawable/shape_circle"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonSearch"
        app:layout_constraintStart_toEndOf="@+id/btnProfile"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        />







  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recycler_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="16dp"/>

</LinearLayout>

