<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_bg"

    >
  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="12dp"
        android:id="@+id/btnProfile"
        app:cardCornerRadius="40dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonLocation"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        >
      <ImageView
          android:layout_height="match_parent"
          android:layout_width="match_parent"
          android:id="@+id/imgProfile"
          android:src="@drawable/profile_image"
          android:scaleType="centerCrop"
          />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_search"
        android:id="@+id/imageButtonSearch"
        android:background="@drawable/shape_circle"
        app:layout_constraintStart_toEndOf="@+id/imageButtonLocation"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        />
    <Button
        android:text="POST"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/btnAddPost"
        android:drawableLeft="@drawable/ic_add"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_rectangle"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_location"
        android:id="@+id/imageButtonLocation"
        android:background="@drawable/shape_circle"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonSearch"
        app:layout_constraintStart_toEndOf="@+id/btnProfile"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        />

  </androidx.constraintlayout.widget.ConstraintLayout>


  <androidx.cardview.widget.CardView
      android:id="@+id/cardViewPosts"
      android:layout_width="match_parent"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_height="wrap_content"
      tools:layout_width="match_parent"
      tools:layout_height="200dp"
      app:cardCornerRadius="20dp"
      android:elevation="3dp"
      android:layout_marginTop="32dp"
      android:clickable="true"
      >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        />

    <LinearLayout
      android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        >

      <androidx.cardview.widget.CardView
          android:layout_centerHorizontal="true"
          android:elevation="12dp"
          app:cardCornerRadius="40dp"
          android:layout_width="50dp"
          android:layout_height="50dp"
          >

        <ImageView
            android:id="@+id/ivQueProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_image"
            />

      </androidx.cardview.widget.CardView>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginLeft="8dp"
          >
        <TextView
            android:id="@+id/tvQName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rakesh Gupta"
            android:textColor="@color/light_gray"
            android:fontFamily="sans-serif"
            />

        <TextView
            android:id="@+id/QLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Delhi"
            android:textColor="@color/light_gray"
            android:fontFamily="sans-serif"
            />


      </LinearLayout>

      <TextView
          android:id="@+id/tvTime"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="2 days ago"
          android:layout_marginLeft="10dp"
          android:textColor="@color/light_gray"
          android:fontFamily="sans-serif"
          />


    </LinearLayout>

    <TextView
      android:id="@+id/tvQuery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:textColor="@color/blue"
      android:text="Hey I have a question about travelling to Mumbai with 4 people. Are there any good places to stay?"

    </LinearLayout>

  </androidx.cardview.widget.CardView>


</LinearLayout>
